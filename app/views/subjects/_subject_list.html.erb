<% @subjects.each do |s| %>
  <div class="card shadow mb-4 mx-3">
    <div class="card-header py-3">
      <h6 class="text-primary font-weight-bold m-0"><%= s.name %></h6>
    </div>
    <ul class="list-group list-group-flush">
      <% s.tasks.each do |task| %>
        <li class="list-group-item">
          <div class="row align-items-center no-gutters">
            <div class="col mr-2">
              <%= link_to subject_task_path(s, task) do %>
                <strong class="h6"><%= task.name %></strong>
              <% end %>
            </div>
            <div class="col-auto">
              <div class="custom-control custom-checkbox">
                <input class="custom-control-input" type="checkbox" id="formCheck-1">
              </div>
            </div>
          </div>
        </li>
      <% end %>
      <li class="list-group-item">
        <div class="row align-items-center no-gutters">
          <div class="col mr-2">
            <%= link_to "New Task", new_subject_task_path(s)%>
          <div class="col-auto">
            <div class="custom-control custom-checkbox">
              <input class="custom-control-input" type="checkbox" id="formCheck-1">
            </div>
          </div>
        </div>
      </li>
    </ul>
  </div>
<% end %>
