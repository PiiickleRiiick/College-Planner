<% @subjects.each do |s| %>
  <div class="card shadow mb-4 mx-5">
    <div class="card-header py-3">
      <h6 class="text-primary font-weight-bold m-0"><%= s.name %></h6>
    </div>
    <ul class="list-group list-group-flush">
      <%= render "subjects/task" %>
    </ul>
  </div>
  <div class="card shadow mb-4 new-card">
    <div class="card-header py-3">
      <h6 class="text-primary font-weight-bold m-0">Create a new Class</h6>
    </div>
  </div>
</div>
<% end %>
